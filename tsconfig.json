{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}